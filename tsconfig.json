{
  "compilerOptions": {
    /* Runtime / output */
    "target": "ES2023",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": true,
    "removeComments": true,
    "incremental": true,

    /* Decorators (NestJS-required) */
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    /* Interop */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    /* Strictness (coherent set) */
    "strict": false,
    "strictPropertyInitialization": false,

    /* Safety / correctness */
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,

    /* Paths / resolution */
    "baseUrl": ".",
    "paths": {
      "@": ["src/*"],
      "@common": ["src/common"],
      "@common/*": ["src/common/*"],
      "@decorators/*": [
        "src/decorators/*"
      ],
      "@controllers/*": [
        "src/controllers/*"
      ],
      "@modules/*": [
        "src/modules/*"
      ],
      "@services/*": [
        "src/services/*"
      ],
      "@entities/*": [
        "src/entities/*"
      ],
      "@auth/*": [
        "src/auth/*"
      ],
      "@guards/*": [
        "src/guards/*"
      ]
    },
    /* Types */
    "types": ["node", "jest"]
  },
  "include": [
  "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "**/*spec.ts"
  ],
}
